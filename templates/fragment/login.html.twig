<div class="mt-12 sm:mx-auto sm:w-full sm:max-w-sm">
    <form
        class="space-y-6"
        action="{{ path('page_login') }}"
        method="POST"
        hx-boost="true"
    >
        <div>
            <label for="username" class="block text-3xl font-medium leading-6 text-gray-900">Username</label>
            <div class="mt-2">
                <input
                    id="username"
                    name="username"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-2xl sm:leading-6 pl-2"
                    required
                />
            </div>
        </div>

        <div>
            <button type="submit" class="flex w-full justify-center rounded-md bg-blue-600 px-3.5 py-2.5 text-3xl font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">Sign in</button>
        </div>
        {% if error %}
            <p class="text-red-600 text-xl pt-4">
                {{ error.message }}
            </p>
        {% endif %}
    </form>
</div>
